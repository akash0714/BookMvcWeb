@page
@model BookRazorWeb.Pages.Categories.AddCategoryModel

<h2> Add Category</h2>
<form method="post" class="container border px-5 py-3">
    <div class="row">
        <div class="col-sm-7">
            <div asp-validation-summary="ModelOnly"></div>
        </div>
    </div>
    <div class="row">
        <label asp-for="Category.Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-6">
            <input asp-for="Category.Name" class="form-control" placeholder="Cartoon, Novel, SciFi.." />
            <span asp-validation-for="Category.Name" class="text-danger"></span>
        </div>
    </div>
    <div class="row mt-3">
        <label asp-for="Category.DisplayOrder" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-6">
            <input asp-for="Category.DisplayOrder" max="999" class="form-control" placeholder="0-999" />
            <span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2"> </div>
        <div class="col-sm-3 mt-3">
            <button type="submit" class="btn btn-primary me-2"> <i class="fa-regular fa-floppy-disk"></i> &nbsp; Save </button>
            <a class="btn btn-secondary" asp-page="Categories"> <i class="fa-solid fa-xmark"></i> &nbsp; Cancel </a>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}