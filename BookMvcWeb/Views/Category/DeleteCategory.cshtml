@model Category

<h2> Delete Category</h2>
<form method="post" class="container border px-5 py-3">
    <input type="hidden" asp-for="Id" />
    <div class="row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-6">
            <input asp-for="Name" class="form-control" placeholder="Cartoon, Novel, SciFi.." />
        </div>
    </div>
    <div class="row mt-3">
        <label asp-for="DisplayOrder" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-6">
            <input asp-for="DisplayOrder" max="999" class="form-control" placeholder="0-999" />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2"> </div>
        <div class="col-sm-3 mt-3">
            <button type="submit" class="btn btn-danger me-2"> <i class="fa-solid fa-trash"></i> &nbsp; Delete </button>
            <a class="btn btn-secondary" asp-action="Index" asp-controller="Category"> <i class="fa-solid fa-xmark"></i> &nbsp; Cancel </a>
        </div>
    </div>
</form>
