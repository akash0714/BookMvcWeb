@model List<Category>
@{
    ViewData["Title"] = "Category View";
}
<div class="container">
    <div class="row mt-3">
        <div class="col-6">
            <h2> Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="Category" asp-action="AddCategory"> <i class="fa-solid fa-square-plus mr-1"></i> &nbsp; Add Category </a>
        </div>

        <table class="table table-bordered table-striped mt-2">
            <thead>
                <tr>
                    <th> Category Name </th>
                    <th> Display Order </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td> @category.Name </td>
                        <td> @category.DisplayOrder </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>