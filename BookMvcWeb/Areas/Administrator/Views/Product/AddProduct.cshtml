@model ProductViewModel

<h2> Add Category</h2>
<form method="post" class="container border px-5 py-3">
    <div class="row">
        <div class="col-sm-7">
            <div asp-validation-summary="ModelOnly"></div>
        </div>
    </div>
    <div class="mt-1">
        <div class="form-floating">
            <input asp-for="Product.Title" class="form-control" />
            <label class="text-dark" asp-for="Product.Title"></label>
            <span asp-validation-for="Product.Title" class="text-danger"></span>
        </div>
    </div>
    <div class="mt-1">
        <div class="form-floating">
            <input asp-for="Product.Author" class="form-control" />
            <label class="text-dark" asp-for="Product.Author"></label>
            <span asp-validation-for="Product.Author" class="text-danger"></span>
        </div>
    </div>
    <div class="mt-1">
        <div class="form-floating">
            <select asp-for="Product.CategoryId" asp-items="@Model.CategoryList" class="form-select">
                <option selected disabled> - Select Category - </option>
            </select>
            <label class="text-dark" asp-for="Product.CategoryId"></label>
            <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
        </div>
    </div>
    <div class="mt-1">
        <div class="form-floating">
            <input asp-for="Product.UnitPrice" class="form-control" />
            <label class="text-dark" asp-for="Product.UnitPrice"></label>
            <span asp-validation-for="Product.UnitPrice" class="text-danger"></span>
        </div>
    </div>
    <div class="mt-1">
        <div class="form-floating">
            <input asp-for="Product.Price50" class="form-control" />
            <label class="text-dark" asp-for="Product.Price50"></label>
            <span asp-validation-for="Product.Price50" class="text-danger"></span>
        </div>
    </div>
    <div class="mt-1">
        <div class="form-floating">
            <input asp-for="Product.Price100" class="form-control" />
            <label class="text-dark" asp-for="Product.Price100"></label>
            <span asp-validation-for="Product.Price100" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3 mt-3">
            <button type="submit" class="btn btn-primary me-2"> <i class="fa-regular fa-floppy-disk"></i> &nbsp; Save </button>
            <a class="btn btn-secondary" asp-action="Index" asp-controller="Product"> <i class="fa-solid fa-xmark"></i> &nbsp; Cancel </a>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}