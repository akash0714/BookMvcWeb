@model Category
@{
}
<h2> Add Category</h2>
<form method="post" class="container border px-5 py-3">
    <div class="row">
        <div class="col-sm-7" >
            <div asp-validation-summary="ModelOnly"></div>
        </div>
    </div>
    <div class="mt-1">
        <div class="form-floating">
            <input asp-for="Name" class="form-control" />
            <label class="text-dark" asp-for="Name"></label>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="mt-3">
        <div class="form-floating">
            <input asp-for="DisplayOrder" class="form-control"/>
            <label class="text-dark" asp-for="DisplayOrder"></label>
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3 mt-3">
            <button type="submit" class="btn btn-primary me-2"> <i class="fa-regular fa-floppy-disk"></i> &nbsp; Save </button>
            <a class="btn btn-secondary" asp-action="Index" asp-controller="Category"> <i class="fa-solid fa-xmark"></i> &nbsp; Cancel </a>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}